{% extends 'layout/layout.html.twig'%}

{%block title%} Алфавитный словарь {{title}}  {%endblock%}

{%block content%}

<div id="" style="">
    <center><h2>{{name}}</h2></center>
	<div class="copyrightdict" >{{copyright|raw}}</div>
    <br/>
    <div class="letter1">
    {% for item in alphabet %}
           <a href="{{asset('/')}}d{{id}}/{{item.letter}}">{{item.letter}}</a>
    {% endfor %}
    </div>
    <br/>
    <div class="letter2">
    {% for item in alphabet2 %}
                <a href="{{asset('/')}}d{{id}}/{{item.letter}}">{{item.letter}}</a>
        {% endfor %}
    </div>
    <br/>
    <br/>
    {% if pagination %}
        <div class="pagination" style="text-align: center;">
            {% for item in pagination %}
                {% if pagination|length > 0 %}
                  <a href="{{app.request.uri}}/../p{{item.value}}"> {{item.value}} </a>
                {% else %}
                    <a href="{{app.request.uri}}p{{item.value}}"> {{item.value}} </a>

                {%endif%}

            {% endfor %}
        </div>
    {% endif %}

    <br/>
        {% if result %}
            {% for item in result %}
                <div class="dkeywords col-xs-12 col-sm-6 col-md-6" >
                    <a href="{{asset('/')}}d{{id}}/show/{{item.keyword}}">{{item.keyword}}</a>
                    {{item.value|raw}}
                </div>
            {% endfor %}
    {% endif%}

    <div style="clear:both;">&nbsp;</div>
    <br/><br/><br/>
        {% if pagination > 0 %}
            <div class="pagination" style="text-align: center;">
                {% for item in pagination %}
                    {% if pagination|length > 0 %}
                      <a href="{{app.request.uri}}/../p{{item.value}}"> {{item.value}} </a>
                     {% else %}
                      <a href="{{app.request.uri}}p{{item.value}}"> {{item.value}} </a>

                    {%endif%}

                {% endfor %}
            </div>
        {% endif %}
    <br/>
    <div class="letter1">
        {% for item in alphabet %}
               <a href="{{asset('/')}}d{{id}}/{{item.letter}}">{{item.letter}}</a>
        {% endfor %}
    </div>
    <br/>
        <div class="letter2">
        {% for item in alphabet2 %}
                    <a href="{{asset('/')}}d{{id}}/{{item.letter}}">{{item.letter}}</a>
            {% endfor %}
        </div>
   <br/>

</div>
{% endblock %}
